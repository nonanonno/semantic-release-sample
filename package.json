{
  "name": "semantic-release-sample",
  "private": true,
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "bump": "conventional-recommended-bump -p angular | xargs npm version --no-commit-hooks --no-git-tag-version",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md package.json package-lock.json",
    "postversion": "export NEW_VERSION=$(npx -c 'echo $npm_package_version') && git checkout -b release/$NEW_VERSION && git commit -m 'chore: bump $NEW_VERSION'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/conventional-changelog": "^3.1.1",
    "@types/conventional-recommended-bump": "^6.1.0",
    "conventional-changelog": "^3.1.25",
    "conventional-changelog-cli": "^2.2.2",
    "conventional-recommended-bump": "^6.1.0",
    "husky": "^7.0.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}